<!-- Title -->
<div class="container text-center">
  <h1> <%= current_user.first_name %> Gallerie <strong> <%= @gallery.name %> </strong></h1>
</div>
<br>
<br>

<div class="wrapper" id="main-user-gallery-show">
  <!-- Left Side of Page -->
  <div class="container left">
    <table class="table table-hover table-artwork">
      <tr>
        <th>Photo</th>
        <th>Nom</th> 
        <th>Artist</th>
        <th>Ann√©e</th>
        <th>Dimensions</th>
        <th>Prix</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    <% @gallery.artworks.order(created_at: :desc).each do |artwork| %>
      <tr>
        <td> <%= image_tag artwork.art_photos.first.photo.url(:cards), style: 'height: 70px;' %></td>
        <td> <%= artwork.name %></td> 
        <td> <%= artwork.artist.first_name %></td>
        <td> <%= artwork.year %></td>
        <td> <%= artwork.dimensions %></td>
        <td> <%= artwork.price %></td>
        <td>Active</td>
        <td><button type="button" class="btn btn-create modal-artwork" data-toggle="modal" data-target=".bs-add-modal-lg<%=artwork.id%>" data-tid = "<%= artwork.id %>">Modifier</button><%= link_to artwork_path(artwork), method: :delete , hidden: true do %> 
              <i class="fas fa-trash" style= "color: black;" id= "delete-link-<%=artwork.id%>"></i>
            <% end %>
              <span data-id="<%=artwork.id%>" class="sweet-alert-d">  <i class="fas fa-trash"></i></span> </td>
      </tr>
      <%= render 'galleries/shared/add_artwork_form', artwork: artwork, gallery: @gallery %>
      <!-- <%= link_to "Modifier", edit_artwork_path(artwork.id), class: "btn btn-create"  %> -->
    <% end %>
    
  
    </table>

  </div>

  <!-- Right Side of Page - Add artworks Form  -->
  <div class="container right">
    <div class="text-center">
      <h3>Ajouter une Oeuvre d'Art</h3>
      <hr>
      <!-- Large modal -->
      <button type="button" class="btn btn-create modal-artwork" data-toggle="modal" data-target=".bs-add-modal-lg<%=@artwork.id || 0%>" data-tid = "<%= @artwork.id || 0%>">Ajouter Une Oeuvre</button>
