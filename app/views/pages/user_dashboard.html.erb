<h1>Bienvenue <%= current_user.first_name %></h1>
<div class = "container">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#artwork" aria-controls="artwork" role="tab" data-toggle="tab">Mes Oeuvres</a></li>
    <li role="presentation"><a href="#gallery" aria-controls="gallery" role="tab" data-toggle="tab">Mes Galeries</a></li>
    <li role="presentation"><a href="#artist" aria-controls="artist" role="tab" data-toggle="tab">Mes Artists</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active fade in" id="artwork">
      <div class="container">
        <div class="row">
             
          <% @artworks.each do  |artwork|%>
            <div class="col-xs-12 col-md-6 col-lg-4">
              <%= render "shared/artwork_card", artwork: artwork %>
            </div>
          <% end %>
       
        </div>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane fade in" id="gallery">
      <div class="container">
        <div class="row">
             
          <% @galleries.each do  |gallery|%>
            <div class="col-xs-12 col-md-6 col-lg-4">
              <%= render "shared/gallery_card", gallery: gallery %>
            </div>
          <% end %>
       
        </div>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane fade in" id="artist">
      <div class="container">
        <div class="row">
             
          <% @artists.each do  |artist|%>
            <div class="col-xs-12 col-md-6 col-lg-4">
              <%= render "shared/artist_card", artist: artist %>
            </div>
          <% end %>
       
        </div>
      </div>
    </div>    
  </div>

</div>