<div id="index-page"></div>
<!-- Results Grid -->
<div class="title-galeries">
  <p> Résultats pour "<%= params[:query] %>" </p>
</div>
<div class="container text-center select-form">
  <div class="row">
     <%= form_tag("",method: "get", remote: true, class: "form-inline") %> 
     <input type="hidden" name="search_query" value="<%=params[:query]%>">
     <div class="col-xs-12 col-sm-6">
      <label for="city"> Ville </label>
      <br>
      <%= select_tag "city", options_from_collection_for_select(@galleries.uniq,"city", "city"), id: "city", include_blank: 'séléctioner tous', class: "form-control" %>
     </div> 
     <div class="col-xs-12 col-sm-6">
      <label for="categories"> Catégorie</label>
      <br>
      <%= grouped_collection_select(:category, :parent_category ,@categories.where(parent_id: nil), :subcategories, "name", "id", "name", {include_blank: "séléctioner tous"},{id: "categories",  class: "form-control", name: "categories"}) %>
    </div> 
    </div>
    <br>
    <div class="row">
      <div class="col-xs-12">
      <%=submit_tag "Filtrer les Résultats", class: "btn btn-warning" %>
    </div>
  </div>
</div>

<div id="search-render">
  <%= render 'shared/results', artworks: @artworks, galleries: @galleries, artists: @artists, markers: @markers %>
</div>

