<%= form_tag("/users/#{current_user.id}/conversations/#{conversation.id}/messages", method: "post", remote: true, class: "flex", id: "new-message") %> 
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <%= text_area_tag("body", nil, class: "f-input", placeholder: "ecrivez votre message") %>
  <%= hidden_field_tag("conversation_id", conversation.id) %>
  <%= button_tag(type: "submit", class: "btn btn-warning", value: "send") do %>
      <i class="fab fa-pushed"></i>
  <% end %>