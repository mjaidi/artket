<!-- Large Modal Target -->
<div class="modal fade bs-artist-modal-lg<%=artist.id || 0%>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="add-form">
        <%= simple_form_for(artist) do |f| %>
          <div class="text-center">
            <h4>Informations sur l'Artiste</h4>
          </div>
          <hr>
          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= f.input :first_name, label: "Prénom" %>
            </div>
            <div class="col-xs-12 col-md-6">
              <%= f.input :last_name, label: "Nom" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :description, as: :text %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= f.input :birth_date,  as: :string, input_html: {type: :date}, label: "Date Naissance" %>
            </div>
            <div class="col-xs-12 col-md-6">
              <%= f.input :death_date,  as: :string, input_html: {type: :date}, label: "Date Décès" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <h6><strong>Photo de l'Artist</strong></h6>
              <%= cl_image_tag(artist.photo.url(:cards), width: 100, height: 100, class: "form-image") %>
                <%= f.file_field :photo, class: "inputfile input-file-5 image-upload", id: "artist#{artist.id}"  %>
                <label for="artist<%=artist.id%>"><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg></figure> <span>Choisir un fichier&hellip;</span></label>
              
            </div>
          </div>
            
          <hr>

            <div class="text-center">
              <div class="submit-exhibition">
                <% if artist.id.nil? %>
                  <%= f.button :submit, class: 'btn btn-create', value: "Ajouter un Artist" %>
                <% else %>
                  <%= f.button :submit, class: 'btn btn-create', value: "Modifier l'Artist #{artist.full_name}" %>
                <% end %>
              </div>
            </div>
            <br>

       <% end %>
      </div>
    </div>
  </div>
</div>
