<div class="card-artist">
  <div class="card-body" style="background-image: url(<%= cl_image_path(artist.photo.url(:cards)) %>);">
  </div>
  <div class="card-footer">
    <div class="card-title">
      <p> <%=artist.first_name%>, <%= artist.last_name %> </p>
    </div>
    <% if user_signed_in? %>
      <div class="controls" id= "controls-user<%=current_user.id%>artist<%=artist.id%>">
        <%= render "shared/artist_controls", artist: artist %>
      </div>
      <% else %>
        <div class="controls" id= "controls-userartist<%=artist.id%>">
          <%= render "shared/artist_controls", artist: artist %>
        </div>
    <% end %>
  </div>
</div>
