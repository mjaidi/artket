<% if current_page?('/') == true %>
  <div class="navbar-wagon navbar-home">
    <% else %>
  <div class="navbar-wagon">
<% end %>
      <div class="left-part">
        <!-- Logo -->
        <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag ("logo.png") %>
        <% end %>

        <!-- Search -->
        <form class="navbar-form navbar-left form-inline" action="/artworks" method= "get" autocomplete="off">
          <div class="form-group searchform group">
            <input type="search" name= "query" class="search-bar hidden"  id="search-box" placeholder="Recherche">
              <label for="search-box" id="search-icon"> <span class="fa fa-2x fa-search"data-toggle="tooltip" data-placement="left" title="Rechercher oeuvres, galleries, styles, artistes ..." data-delay="0"></span></label>
          </div>
        </form>
      </div>
      <!-- form-control-btn-search -->
      <!-- Right Navigation -->
      <div class="right-part hidden-xs hidden-sm">
        <%= link_to "Galeries", galleries_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Expositions", exhibitions_path, class: "navbar-wagon-item navbar-wagon-link"  %>
        <% if user_signed_in? %>
          <%= link_to "Messages", conversations_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
          <% if current_user.gallerist %>
            <%= link_to "Tableau de bord", user_gallery_dashboard_path(current_user.id), class: "navbar-wagon-item navbar-wagon-link"  %>
          <% else %>
            <%= link_to "Ma Page PersonalisÃ©", user_dashboard_path(current_user.id), class: "navbar-wagon-item navbar-wagon-link"  %>
          <% end %>
        <%= link_to destroy_user_session_path, method: :delete, class: "log-btn" do %>
                <!-- <i class="fas fa-sign-out-alt"></i> -->  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "log-btn" %>
        <% end %>
      </div>

  <!-- Dropdown appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Galeries", galleries_path %></li>
            <li><%= link_to "Expositions", exhibitions_path %></li>
          </ul>
        </div>
      </div>
    </div>


