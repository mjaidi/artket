<div class="card-art">

  <div class="card-body" style="background-image: url(<%= cl_image_path(artwork.art_photos.first.photo.url(:cards)) %>)">
    <%= link_to "", artwork_path(artwork.id), class: "card-link" %>
  </div>

  <div class="card-footer">
    <div class="card-title">
      <p><%= artwork.name %> </p>
      <div class="card-desc">
        <p><%= artwork.artist.first_name %> <%= artwork.artist.last_name %></p>
      </div>
    </div>
    <div class="controls">
      <a href="#"><i class="fas fa-heart"></i></a>
    </div>
  </div>

</div>
