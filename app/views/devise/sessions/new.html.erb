<div class="login">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row top-signup">
  <%= link_to root_path, class: "navbar-brand" do %>
    <span data-toggle="tooltip" data-placement="left" title="Retour à la page d'acceuil" data-delay="0"><%= image_tag ("ArtKet.svg") %></span>
  <% end %>
</div>
<div class="row top-signup">
  <%= link_to "S'enregistrer avec Facebook", user_facebook_omniauth_authorize_path, class: "loginBtn loginBtn--facebook hidden" %>
</div>
<div class="row"  style="padding: 20px;">
  <div class="col-xs-12 col-md-6" style="padding: 0;">
  <h5 class = "log-btn-custom dark"><%= link_to "Nouveau Compte", new_registration_path(resource_name) %></h5>
  </div>
  <div class="col-xs-12 col-md-6"style="padding: 0;">
    <h5 class="log-btn-custom">Se connecter</h5>
  </div>
</div>
<h3 class = "text-center">Se connecter</h3>
<br>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Se rappeler de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions sign-btn">
    <%= f.button :submit, "Se connecter" %>
  </div>
  <br>
  <div class="forgot-password">
    <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %>
  </div>
<% end %>

</div>
